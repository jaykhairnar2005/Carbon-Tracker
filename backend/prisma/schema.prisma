
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id             Int      @id @default(autoincrement())
  category       String
  type           String   @default("default") // e.g., "Car", "Veg"
  value          Float    // e.g., km, units, count
  carbonEmission Float
  createdAt      DateTime @default(now())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  name       String?
  activities Activity[]
}
